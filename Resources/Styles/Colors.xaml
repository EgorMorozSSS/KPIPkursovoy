<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Основная коричнево-черная палитра -->
    <Color x:Key="Primary">#5D4037</Color>
    <!-- Основной коричневый -->
    <Color x:Key="PrimaryLight">#8D6E63</Color>
    <!-- Светлый коричневый -->
    <Color x:Key="PrimaryDark">#3E2723</Color>
    <!-- Темный коричневый -->
    <Color x:Key="Secondary">#D7CCC8</Color>
    <!-- Светло-бежевый -->
    <Color x:Key="Tertiary">#BCAAA4</Color>
    <!-- Серо-коричневый -->

    <!-- Нейтральные цвета -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="OffBlack">#0C0B0B</Color>
    <!-- Почти черный -->
    <Color x:Key="CardLight">#FFFFFF</Color>
    <!-- Фон карточек светлый -->
    <Color x:Key="CardDark">#1A1A1A</Color>
    <!-- Фон карточек темный -->

    <!-- Текстовые цвета -->
    <Color x:Key="TextPrimaryLight">#212121</Color>
    <Color x:Key="TextSecondaryLight">#757575</Color>
    <Color x:Key="TextPrimaryDark">#F5F5F5</Color>
    <Color x:Key="TextSecondaryDark">#BDBDBD</Color>

    <!-- Акцентные цвета -->
    <Color x:Key="Accent">#FF6E40</Color>
    <!-- Оранжево-красный акцент -->
    <Color x:Key="Success">#4CAF50</Color>
    <!-- Зеленый для успеха -->
    <Color x:Key="Error">#F44336</Color>
    <!-- Красный для ошибок -->

    <!-- Оттенки серого -->
    <Color x:Key="Gray100">#F5F5F5</Color>
    <Color x:Key="Gray200">#EEEEEE</Color>
    <Color x:Key="Gray300">#E0E0E0</Color>
    <Color x:Key="Gray400">#BDBDBD</Color>
    <Color x:Key="Gray500">#9E9E9E</Color>
    <Color x:Key="Gray600">#757575</Color>
    <Color x:Key="Gray700">#616161</Color>
    <Color x:Key="Gray800">#424242</Color>
    <Color x:Key="Gray900">#212121</Color>
</ResourceDictionary>