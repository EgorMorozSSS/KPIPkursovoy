<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Course.Views.BooklistHomePage"
             xmlns:converters="clr-namespace:Course.Converters"
             xmlns:viewmodel="clr-namespace:Course.ViewModels"
             x:DataType="viewmodel:BooklistHomePageViewmodel"
             xmlns:models="clr-namespace:Course.Models"
             Title="{Binding Title}"
             xmlns:controls="clr-namespace:Course.CustomControls">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Refresh" Command="{Binding LoadBookFromDatabaseCommand}"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:BoolToFavoriteTextConverter x:Key="BoolToFavoriteTextConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <StackLayout Padding="10" Spacing="15">

            <!-- Поисковая строка -->
            <StackLayout Orientation="Horizontal">
                <Entry Placeholder="Search books..." 
                       Text="{Binding SearchText}" 
                       HorizontalOptions="FillAndExpand"
                       Margin="0,0,5,0"/>
                <Button Text="Search" Command="{Binding SearchBooksCommand}" />
            </StackLayout>

            <!-- Фильтр по жанрам -->
            <StackLayout Orientation="Horizontal">
                <Picker Title="Select Genre"
                        ItemsSource="{Binding Genres}"
                        SelectedItem="{Binding SelectedGenre, Mode=TwoWay}"
                        HorizontalOptions="FillAndExpand"/>
                <Button Text="Filter" Command="{Binding FilterBooksByGenreCommand}" />
            </StackLayout>

            <!-- Индикатор загрузки -->
            <ActivityIndicator IsVisible="{Binding LoadBookFromDatabaseCommand.IsRunning}" 
                               Color="Red" 
                               IsRunning="{Binding LoadBookFromDatabaseCommand.IsRunning}"  
                               Margin="0,10"/>

            <!-- Список книг -->
            <CollectionView ItemsSource="{Binding Books}" 
                            IsVisible="{Binding GridVisibility}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Book">
                        <Frame Margin="2,5,2,0" Padding="5">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={x:RelativeSource AncestorType={x:Type viewmodel:BooklistHomePageViewmodel}}, Path=NavigateToDetailsCommand}" 
                                                      CommandParameter="{Binding .}"/>
                                <SwipeGestureRecognizer Direction="Left" 
                                                        Command="{Binding Source={x:RelativeSource AncestorType={x:Type viewmodel:BooklistHomePageViewmodel}}, Path=DeleteBookDataCommand}" 
                                                        CommandParameter="{Binding .}"/>
                                <SwipeGestureRecognizer Direction="Right" 
                                                        Command="{Binding Source={x:RelativeSource AncestorType={x:Type viewmodel:BooklistHomePageViewmodel}}, Path=UpdateBookDataCommand}" 
                                                        CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>

                            <HorizontalStackLayout Spacing="20" Padding="0">
                                <controls:CustomImageControl Base64Source="{Binding Image}" WidthRequest="50" HeightRequest="100"/>
                                <VerticalStackLayout VerticalOptions="CenterAndExpand">
                                    <Label Text="{Binding Title}" FontAttributes="Bold"/>
                                    <Label Text="{Binding Description}" />
                                    <Label Text="{Binding Genre}" FontAttributes="Italic"/>
                                    <HorizontalStackLayout Spacing="10" Padding="5,0">
                                        <Button Text="❤️"
                    Command="{Binding Source={x:RelativeSource AncestorType={x:Type viewmodel:BooklistHomePageViewmodel}}, Path=LikeBookCommand}"
                    CommandParameter="{Binding .}" />
                                        <Label Text="{Binding Likes}" />

                                        <Button Text="{Binding IsFavorite, Converter={StaticResource BoolToFavoriteTextConverter}}"
                    Command="{Binding Source={x:RelativeSource AncestorType={x:Type viewmodel:BooklistHomePageViewmodel}}, Path=ToggleFavoriteCommand}"
                    CommandParameter="{Binding .}" />
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Оставить отзыв -->
            <!-- Оставить отзыв -->
            <Frame Padding="10" CornerRadius="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Оставить отзыв:" FontAttributes="Bold" FontSize="16" />

                    <!-- Выбор книги -->
                    <Picker Title="Выберите книгу" 
                ItemsSource="{Binding Books}" 
                ItemDisplayBinding="{Binding Title}" 
                SelectedItem="{Binding SelectedBook}" />

                    <!-- Ввод рейтинга -->
                    <StackLayout Orientation="Horizontal" VerticalOptions="Center">
                        <Label Text="Рейтинг:" VerticalOptions="Center" TextColor="White"/>
                        <Picker Title="1-5" SelectedItem="{Binding NewReviewRating}" ItemsSource="{Binding RatingOptions}" WidthRequest="100"/>
                    </StackLayout>

                    <!-- Поле отзыва -->
                    <Editor Placeholder="Напишите отзыв..." 
                Text="{Binding NewReviewContent}" 
                AutoSize="TextChanges" />

                    <!-- Кнопка добавления -->
                    <Button Text="Добавить отзыв" 
                Command="{Binding AddReviewCommand}" 
                 TextColor="White"/>
                </VerticalStackLayout>
            </Frame>


            <!-- Отображение отзывов -->
            <CollectionView ItemsSource="{Binding Reviews}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Review">
                        <Frame Padding="5" Margin="2">
                            <VerticalStackLayout>
                                <Label Text="{Binding BookTitle}" FontAttributes="Bold" />
                                <Label Text="{Binding Rating}" />
                                <Label Text="{Binding Content}" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Button Text="Profile"
        Command="{Binding NavigateToProfileCommand}"
        TextColor="White"/>

        </StackLayout>
    </ScrollView>

</ContentPage>
