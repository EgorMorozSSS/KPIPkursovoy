<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Course.Views.LoginPage"
    xmlns:viewmodel="clr-namespace:Course.ViewModels"
    x:DataType="viewmodel:LoginViewModel"
    Title="Login"
    Style="{StaticResource PageStyle}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15" 
                             VerticalOptions="Center">

            <Label Text="Welcome Back" 
                   Style="{StaticResource Headline}" 
                   HorizontalOptions="Center"/>

            <Frame Style="{StaticResource CardStyle}">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Email:" Style="{StaticResource FieldLabel}"/>
                    <Entry Placeholder="Email Address" 
                           Text="{Binding Email}" 
                           Keyboard="Email"
                           Style="{StaticResource PrimaryEntry}"/>

                    <Label Text="Password:" Style="{StaticResource FieldLabel}"/>
                    <Entry Placeholder="Password" 
                           Text="{Binding Password}" 
                           IsPassword="True"
                           Style="{StaticResource PrimaryEntry}"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Buttons -->
            <Button Text="Login" 
                    Command="{Binding LoginCommand}"
                    Style="{StaticResource PrimaryButton}"/>

            <Button Text="No account? Registration"
                    Command="{Binding NavigateToRegistrationCommand}"
                    Style="{StaticResource SecondaryButton}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>