<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Course.Views.RegistrationPage"
    xmlns:viewmodel="clr-namespace:Course.ViewModels"
    x:DataType="viewmodel:RegistrationViewModel"
    Title="Registration">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15" 
                             VerticalOptions="Center">
            
            <Label Text="Create Account" 
                   Style="{StaticResource Headline}" 
                   HorizontalOptions="Center"/>
            
            <Border Style="{StaticResource CardStyle}">
                <VerticalStackLayout Spacing="15">
                    <!-- Выбор роли -->
                    <Picker Title="Select Role"
                            ItemsSource="{Binding Roles}"
                            SelectedItem="{Binding SelectedRole}"
                            ItemDisplayBinding="{Binding Name}"/>
                    
                    <!-- Поля формы -->
                    <Label Text="Name:" Style="{StaticResource FieldLabel}"/>
                    <Entry Placeholder="Full Name" 
                           Text="{Binding Name}"/>
                    
                    <Label Text="Email:" Style="{StaticResource FieldLabel}"/>
                    <Entry Placeholder="Email Address" 
                           Text="{Binding Email}"
                           Keyboard="Email"/>
                    <Label Text="{Binding EmailError}" 
                           IsVisible="{Binding HasEmailErrors}"
                           Style="{StaticResource ErrorLabel}"/>
                    
                    <Label Text="Password:" Style="{StaticResource FieldLabel}"/>
                    <Entry Placeholder="Password" 
                           IsPassword="True" 
                           Text="{Binding Password}"/>
                </VerticalStackLayout>
            </Border>
            
            <!-- Кнопки -->
            <Button Text="Register" 
                    Command="{Binding RegisterCommand}"
                    Style="{StaticResource PrimaryButton}"/>
            
            <Button Text="Have account? Login"
                    Command="{Binding NavigateToLoginCommand}"
                    Style="{StaticResource SecondaryButton}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>